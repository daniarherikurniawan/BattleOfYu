#ifndef LINE3D_H
#define LINE3D_H

struct Point3D {
	double x;
	double y;
	double z;
	Point3D(int x0, int y0, int z0) : x(x0), y(y0), z(z0) {} 
	void translate (int x0, int y0, int z0) {x += x0; y+=y0; z+=z0;}
};


struct Line3D {
	Point3D p1, p2;
	Line3D(int x0, int y0, int z0, int x1, int y1, int z1) : p1(x0,y0,z0) , p2(x1,y1,z1) {}
	void translate(int x0, int y0, int z0) {p1.translate(x0,y0,z0);p2.translate(x0,y0,z0);}
};
#endif
