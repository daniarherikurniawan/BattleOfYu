#include "Pixel.h"
#include "Screen.h"
#include "Line.h"
#include "CompositeDrawable.h"
#include "Keyboard.h"

#ifndef __PROPELLER_HPP
#define __PROPELLER_HPP

#define PROPELLER_IDLE 0
#define PROPELLER_MOVE 1
#define PROPELLER_DEAD 2

class Propeller {
	int state;
	float rotation;
	CompositeDrawable* draw_elmt;
	
public:
	Propeller(string filename);
	void draw(Screen* screen);
};

Propeller::Propeller(string filename){
	draw_elmt = new CompositeDrawable(filename);
}

Propeller::~Propeller(){
	delete (draw_elmt);
}

void Propeller::draw(Screen* screen){
	screen->draw(draw_elmt,1.0f);
}
#endif

