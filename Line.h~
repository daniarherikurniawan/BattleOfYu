#ifndef LINE_H
#define LINE_H

#include "Drawable.h"
#include <cstdlib>
#include <cstdio>
#include "IGeometry.hpp"

class Line : public Drawable{
private :
	Point mBeginPoint;
	Point mEndPoint;
	Color mColor;
	
public :
	Line(Point beginPoint,Point endPoint,Color color);
	vector<Pixel> getPixels() const;
	int getLeftMostX() const;
	int getTopMostY() const;
	
	void translate(int dx,int dy);
};

#endif
